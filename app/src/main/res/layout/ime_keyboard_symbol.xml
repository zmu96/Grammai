<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ime_background"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_1" style="@style/KeyboardKeyStyle" android:text="1" android:layout_weight="1" />
        <Button android:id="@+id/key_2" style="@style/KeyboardKeyStyle" android:text="2" android:layout_weight="1" />
        <Button android:id="@+id/key_3" style="@style/KeyboardKeyStyle" android:text="3" android:layout_weight="1" />
        <Button android:id="@+id/key_4" style="@style/KeyboardKeyStyle" android:text="4" android:layout_weight="1" />
        <Button android:id="@+id/key_5" style="@style/KeyboardKeyStyle" android:text="5" android:layout_weight="1" />
        <Button android:id="@+id/key_6" style="@style/KeyboardKeyStyle" android:text="6" android:layout_weight="1" />
        <Button android:id="@+id/key_7" style="@style/KeyboardKeyStyle" android:text="7" android:layout_weight="1" />
        <Button android:id="@+id/key_8" style="@style/KeyboardKeyStyle" android:text="8" android:layout_weight="1" />
        <Button android:id="@+id/key_9" style="@style/KeyboardKeyStyle" android:text="9" android:layout_weight="1" />
        <Button android:id="@+id/key_0" style="@style/KeyboardKeyStyle" android:text="0" android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_plus" style="@style/KeyboardKeyStyle" android:text="+" android:layout_weight="1" />
        <Button android:id="@+id/key_x" style="@style/KeyboardKeyStyle" android:text="x" android:layout_weight="1" />
        <Button android:id="@+id/key_percent" style="@style/KeyboardKeyStyle" android:text="%" android:layout_weight="1" />
        <Button android:id="@+id/key_slash" style="@style/KeyboardKeyStyle" android:text="/" android:layout_weight="1" />
        <Button android:id="@+id/key_underscore" style="@style/KeyboardKeyStyle" android:text="_" android:layout_weight="1" />
        <Button android:id="@+id/key_lt" style="@style/KeyboardKeyStyle" android:text="&lt;" android:layout_weight="1" />
        <Button android:id="@+id/key_gt" style="@style/KeyboardKeyStyle" android:text="&gt;" android:layout_weight="1" />
        <Button android:id="@+id/key_open_bracket" style="@style/KeyboardKeyStyle" android:text="[" android:layout_weight="1" />
        <Button android:id="@+id/key_close_bracket" style="@style/KeyboardKeyStyle" android:text="]" android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_exclamation" style="@style/KeyboardKeyStyle" android:text="!" android:layout_weight="1" />
        <Button android:id="@+id/key_at" style="@style/KeyboardKeyStyle" android:text="\@" android:layout_weight="1" />
        <Button android:id="@+id/key_hash" style="@style/KeyboardKeyStyle" android:text="\#" android:layout_weight="1" />
        <Button android:id="@+id/key_backslash" style="@style/KeyboardKeyStyle" android:text="\\" android:layout_weight="1" />
        <Button android:id="@+id/key_percent2" style="@style/KeyboardKeyStyle" android:text="%" android:layout_weight="1" />
        <Button android:id="@+id/key_caret" style="@style/KeyboardKeyStyle" android:text="^" android:layout_weight="1" />
        <Button android:id="@+id/key_ampersand" style="@style/KeyboardKeyStyle" android:text="&amp;" android:layout_weight="1" />
        <Button android:id="@+id/key_asterisk" style="@style/KeyboardKeyStyle" android:text="*" android:layout_weight="1" />
        <Button android:id="@+id/key_open_paren" style="@style/KeyboardKeyStyle" android:text="(" android:layout_weight="1" />
        <Button android:id="@+id/key_close_paren" style="@style/KeyboardKeyStyle" android:text=")" android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_symbol_change" style="@style/KeyboardKeyFunctionStyle" android:text="1/2" android:layout_weight="1.5" />

        <Button android:id="@+id/key_minus" style="@style/KeyboardKeyStyle" android:text="-" android:layout_weight="1" />
        <Button android:id="@+id/key_single_quote" style="@style/KeyboardKeyStyle" android:text="'" android:layout_weight="1" />
        <Button android:id="@+id/key_double_quote" style="@style/KeyboardKeyStyle" android:text="&quot;" android:layout_weight="1" />
        <Button android:id="@+id/key_colon" style="@style/KeyboardKeyStyle" android:text=":" android:layout_weight="1" />
        <Button android:id="@+id/key_semicolon" style="@style/KeyboardKeyStyle" android:text=";" android:layout_weight="1" />
        <Button android:id="@+id/key_comma" style="@style/KeyboardKeyStyle" android:text="," android:layout_weight="1" />
        <Button android:id="@+id/key_question" style="@style/KeyboardKeyStyle" android:text="\?" android:layout_weight="1" />

        <Button android:id="@+id/key_delete" style="@style/KeyboardKeyFunctionStyle" android:text="⌫" android:layout_weight="1.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_hangul_keyboard" style="@style/KeyboardKeyFunctionStyle" android:text="가" android:layout_weight="1.5" />

        <Button android:id="@+id/key_hangul_english" style="@style/KeyboardKeyFunctionStyle" android:text="한/영" android:layout_weight="1" />

        <Button android:id="@+id/key_comma2" style="@style/KeyboardKeyStyle" android:text="," android:layout_weight="1" />

        <Button android:id="@+id/key_space" style="@style/KeyboardKeyStyle" android:text="SPACE" android:layout_weight="4" />

        <Button android:id="@+id/key_period" style="@style/KeyboardKeyStyle" android:text="." android:layout_weight="1" />

        <Button android:id="@+id/key_enter" style="@style/KeyboardKeyFunctionStyle" android:text="↩︎" android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>