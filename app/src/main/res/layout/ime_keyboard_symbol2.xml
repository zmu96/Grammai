<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ime_background"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_1" style="@style/KeyboardKeyStyle" android:text="1" android:layout_weight="1" />
        <Button android:id="@+id/key_2" style="@style/KeyboardKeyStyle" android:text="2" android:layout_weight="1" />
        <Button android:id="@+id/key_3" style="@style/KeyboardKeyStyle" android:text="3" android:layout_weight="1" />
        <Button android:id="@+id/key_4" style="@style/KeyboardKeyStyle" android:text="4" android:layout_weight="1" />
        <Button android:id="@+id/key_5" style="@style/KeyboardKeyStyle" android:text="5" android:layout_weight="1" />
        <Button android:id="@+id/key_6" style="@style/KeyboardKeyStyle" android:text="6" android:layout_weight="1" />
        <Button android:id="@+id/key_7" style="@style/KeyboardKeyStyle" android:text="7" android:layout_weight="1" />
        <Button android:id="@+id/key_8" style="@style/KeyboardKeyStyle" android:text="8" android:layout_weight="1" />
        <Button android:id="@+id/key_9" style="@style/KeyboardKeyStyle" android:text="9" android:layout_weight="1" />
        <Button android:id="@+id/key_0" style="@style/KeyboardKeyStyle" android:text="0" android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_open_curly" style="@style/KeyboardKeyStyle" android:text="{" android:layout_weight="1" />
        <Button android:id="@+id/key_close_curly" style="@style/KeyboardKeyStyle" android:text="}" android:layout_weight="1" />
        <Button android:id="@+id/key_section" style="@style/KeyboardKeyStyle" android:text="§" android:layout_weight="1" />
        <Button android:id="@+id/key_euro" style="@style/KeyboardKeyStyle" android:text="€" android:layout_weight="1" />
        <Button android:id="@+id/key_pound" style="@style/KeyboardKeyStyle" android:text="£" android:layout_weight="1" />
        <Button android:id="@+id/key_yen" style="@style/KeyboardKeyStyle" android:text="¥" android:layout_weight="1" />
        <Button android:id="@+id/key_bullet" style="@style/KeyboardKeyStyle" android:text="•" android:layout_weight="1" />
        <Button android:id="@+id/key_degree" style="@style/KeyboardKeyStyle" android:text="°" android:layout_weight="1" />
        <Button android:id="@+id/key_plusminus" style="@style/KeyboardKeyStyle" android:text="±" android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_tilde" style="@style/KeyboardKeyStyle" android:text="~" android:layout_weight="1" />
        <Button android:id="@+id/key_pipe" style="@style/KeyboardKeyStyle" android:text="|" android:layout_weight="1" />
        <Button android:id="@+id/key_bullet2" style="@style/KeyboardKeyStyle" android:text="•" android:layout_weight="1" />
        <Button android:id="@+id/key_sqrt" style="@style/KeyboardKeyStyle" android:text="√" android:layout_weight="1" />
        <Button android:id="@+id/key_delta" style="@style/KeyboardKeyStyle" android:text="∆" android:layout_weight="1" />
        <Button android:id="@+id/key_pi" style="@style/KeyboardKeyStyle" android:text="π" android:layout_weight="1" />
        <Button android:id="@+id/key_divide" style="@style/KeyboardKeyStyle" android:text="÷" android:layout_weight="1" />
        <Button android:id="@+id/key_multiply" style="@style/KeyboardKeyStyle" android:text="×" android:layout_weight="1" />
        <Button android:id="@+id/key_at" style="@style/KeyboardKeyStyle" android:text="\@" android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_symbol_change" style="@style/KeyboardKeyFunctionStyle" android:text="2/2" android:layout_weight="1.5" />

        <Button android:id="@+id/key_minus" style="@style/KeyboardKeyStyle" android:text="-" android:layout_weight="1" />
        <Button android:id="@+id/key_quote_left" style="@style/KeyboardKeyStyle" android:text="‘" android:layout_weight="1" />
        <Button android:id="@+id/key_quote_right" style="@style/KeyboardKeyStyle" android:text="’" android:layout_weight="1" />
        <Button android:id="@+id/key_dblquote_left" style="@style/KeyboardKeyStyle" android:text="“" android:layout_weight="1" />
        <Button android:id="@+id/key_dblquote_right" style="@style/KeyboardKeyStyle" android:text="”" android:layout_weight="1" />
        <Button android:id="@+id/key_ellipsis" style="@style/KeyboardKeyStyle" android:text="…" android:layout_weight="1" />

        <Button android:id="@+id/key_delete" style="@style/KeyboardKeyFunctionStyle" android:text="⌫" android:layout_weight="1.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_hangul_keyboard" style="@style/KeyboardKeyFunctionStyle" android:text="가" android:layout_weight="1.5" />

        <Button android:id="@+id/key_mode_change" style="@style/KeyboardKeyFunctionStyle" android:text="한/영" android:layout_weight="1" />

        <Button android:id="@+id/key_comma" style="@style/KeyboardKeyStyle" android:text="," android:layout_weight="1" />

        <Button android:id="@+id/key_space" style="@style/KeyboardKeyStyle" android:text="SPACE" android:layout_weight="4" />

        <Button android:id="@+id/key_period" style="@style/KeyboardKeyStyle" android:text="." android:layout_weight="1" />

        <Button android:id="@+id/key_enter" style="@style/KeyboardKeyFunctionStyle" android:text="↩︎" android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>