            <Button android:id="@+id/key_s2_sqrt" style="@style/KeyboardKeyStyle" android:text="√" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_delta" style="@style/KeyboardKeyStyle" android:text="∆" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_pi" style="@style/KeyboardKeyStyle" android:text="π" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_divide" style="@style/KeyboardKeyStyle" android:text="÷" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_multiply" style="@style/KeyboardKeyStyle" android:text="×" android:layout_weight="1" />
