            <Button android:id="@+id/key_s2_period" style="@style/KeyboardKeyStyle" android:text="." android:layout_weight="1" />

            <Button android:id="@+id/key_s2_enter" style="@style/KeyboardKeyFunctionStyle" android:text="↩︎" android:layout_weight="2" />
