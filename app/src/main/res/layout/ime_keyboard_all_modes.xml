            <Button android:id="@+id/key_s2_3" style="@style/KeyboardKeyStyle" android:text="3" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_4" style="@style/KeyboardKeyStyle" android:text="4" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_5" style="@style/KeyboardKeyStyle" android:text="5" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_6" style="@style/KeyboardKeyStyle" android:text="6" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_7" style="@style/KeyboardKeyStyle" android:text="7" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_8" style="@style/KeyboardKeyStyle" android:text="8" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_9" style="@style/KeyboardKeyStyle" android:text="9" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_0" style="@style/KeyboardKeyStyle" android:text="0" android:layout_weight="1" />
        </LinearLayout>

        <!-- 기호 행 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:id="@+id/key_s2_open_curly" style="@style/KeyboardKeyStyle" android:text="{" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_close_curly" style="@style/KeyboardKeyStyle" android:text="}" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_section" style="@style/KeyboardKeyStyle" android:text="§" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_euro" style="@style/KeyboardKeyStyle" android:text="€" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_pound" style="@style/KeyboardKeyStyle" android:text="£" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_yen" style="@style/KeyboardKeyStyle" android:text="¥" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_bullet" style="@style/KeyboardKeyStyle" android:text="•" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_degree" style="@style/KeyboardKeyStyle" android:text="°" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_plusminus" style="@style/KeyboardKeyStyle" android:text="±" android:layout_weight="1" />
        </LinearLayout>

        <!-- 기호 행 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:id="@+id/key_s2_tilde" style="@style/KeyboardKeyStyle" android:text="~" android:layout_weight="1" />
            <Button android:id="@+id/key_s2_pipe" style="@style/KeyboardKeyStyle" android:text="|" android:layout_weight="1" />
